#!/usr/bin/env bash

set -E
[ -n "$MOPE_DEBUG" ] && set -x

# Provide mope completions
if [ "$1" = "--complete" ]; then
	exec mono-build --definitions
fi

if [ -z "$MOPE_ROOT" ]; then
	MOPE_ROOT="${HOME}/.mope"
fi

DEFINITION="$1"
case "$DEFINITION" in
"" | -* )
	{
		echo "usage: mope install VERSION"
		echo "       mope install /path/to/definition"
		echo
		echo "Available versions:"
		mono-build --definitions | sed 's/^/  /'
		echo
	} >&2
	exit 1
	;;
esac

VERSION_NAME="${DEFINITION##*/}"
PREFIX="${MOPE_ROOT}/versions/${VERSION_NAME}"

mono-build "$DEFINITION" "$PREFIX"
mope rehash